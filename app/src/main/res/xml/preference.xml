<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="@string/pref_openmode"
        android:summary="Открывать файл при запуске приложения"
        android:title="Открыть" />

    <EditTextPreference
        android:defaultValue="14"
        android:dialogTitle="Введите размер шрифта (от 10 до 32)"
        android:key="@string/pref_size"
        android:summary="Устанавливает новый размер шрифта"
        android:title="Размер шрифта" />
    <ListPreference
        android:key="@string/pref_style"
        android:title="Цвет шрифта"
        android:summary="Устанавливает цвет для шрифта"
        android:defaultValue="1"
        android:entries="@array/text_style"
        android:entryValues="@array/text_style"
        android:dialogTitle="Выберите цвет для шрифта" />
    <ListPreference
        android:key="@string/pref_font"
        android:title="Шрифт"
        android:summary="Устанавливает шрифт"
        android:defaultValue="1"
        android:entries="@array/text_style"
        android:entryValues="@array/text_style"
        android:dialogTitle="Выберите шрифт" />
    <CheckBoxPreference
        android:key="@string/pref_background"
        android:summary="Использовать дизайнерский фон"
        android:title="Фон" />
</PreferenceScreen>